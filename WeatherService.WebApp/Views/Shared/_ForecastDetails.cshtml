@model WeatherService.Contracts.Responses.ForecastDetailsResponse

<div class="ws-details-table">
    <div class="ws-details-row"><div class="ws-details-key">Latitude</div><div class="ws-details-val">@Model.Latitude</div></div>
    <div class="ws-details-row"><div class="ws-details-key">Longitude</div><div class="ws-details-val">@Model.Longitude</div></div>
    <div class="ws-details-row"><div class="ws-details-key">Temperature</div><div class="ws-details-val">@Model.Temperature @Model.Units?.TemperatureUnit</div></div>
    <div class="ws-details-row"><div class="ws-details-key">Wind</div><div class="ws-details-val">@Model.WindSpeed @Model.Units?.WindSpeedUnit, dir @Model.WindDirection @Model.Units?.WindDirectionUnit</div></div>
    <div class="ws-details-row"><div class="ws-details-key">Sunrise</div><div class="ws-details-val">@Model.Sunrise.ToString("u")</div></div>
</div>
<div class="ws-note">Values update hourly.</div>