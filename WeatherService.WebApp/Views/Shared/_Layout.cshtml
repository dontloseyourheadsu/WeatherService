@{
    var title = ViewData["Title"] as string ?? "Weather Service";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>

<body data-theme="dark">
    <header class="ws-navbar">
        <div class="ws-container ws-navbar__inner">
            <a class="ws-brand" href="/">Weather Service</a>
            <nav class="ws-nav">
                <a class="ws-nav__link" href="/Weather">Dashboard</a>
                <a class="ws-nav__link" href="#" data-tab="analysis" id="nav-analysis">Analysis</a>
            </nav>
            <button class="ws-btn ws-btn--ghost" id="theme-toggle" aria-label="Toggle theme">ðŸŒ™</button>
        </div>
    </header>

    <main class="ws-container ws-main">
        @RenderBody()
    </main>

    <script defer src="/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>

</html>