@model WeatherService.WebApp.Models.WeatherQueryViewModel
@{
    ViewData["Title"] = "Weather Queries";
}

<h1 class="mb-4">Weather Queries</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var kvp in ViewData.ModelState)
            {
                foreach (var error in kvp.Value!.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="row g-4">
    <div class="col-12 col-lg-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Echo</h5>
                <form asp-action="Echo" method="post">
                    <div class="mb-3">
                        <label asp-for="Message" class="form-label"></label>
                        <input asp-for="Message" class="form-control" />
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
                @if (!string.IsNullOrWhiteSpace(Model.EchoResult))
                {
                    <div class="mt-3 alert alert-info">@Model.EchoResult</div>
                }
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Forecast by Coordinates</h5>
                <form asp-action="ByCoordinates" method="post">
                    <div class="mb-3">
                        <label asp-for="Latitude" class="form-label"></label>
                        <input asp-for="Latitude" class="form-control" />
                        <span asp-validation-for="Latitude" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Longitude" class="form-label"></label>
                        <input asp-for="Longitude" class="form-control" />
                        <span asp-validation-for="Longitude" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Get Forecast</button>
                </form>
                @if (Model.ForecastByCoordinates is not null)
                {
                    <div class="mt-3">
                        @await Html.PartialAsync("_ForecastDetails", Model.ForecastByCoordinates)
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Forecast by Location</h5>
                <form asp-action="ByLocation" method="post">
                    <div class="mb-3">
                        <label asp-for="Location" class="form-label"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Get Forecast</button>
                </form>
                @if (Model.ForecastByLocation is not null)
                {
                    <div class="mt-3">
                        @await Html.PartialAsync("_ForecastDetails", Model.ForecastByLocation)
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}